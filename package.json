{
  "name": "dirasiq-api",
  "version": "1.0.0",
  "description": "Professional API for Dirasiq platform",
  "main": "dist/index.js",
  "scripts": {
    "dev": "nodemon src/index.ts",
    "build": "tsc",
    "postbuild": "mkdir -p dist/database/migrations && cp -r src/database/migrations/* dist/database/migrations/ || true",
    "start": "node dist/index.js",
    "test": "jest",
    "lint": "eslint src/**/*.ts",
    "lint:fix": "eslint src/**/*.ts --fix",
    "format": "prettier --write src/**/*.{ts,js,json}",
    "format:check": "prettier --check src/**/*.{ts,js,json}",
    "db:init": "ts-node -r tsconfig-paths/register src/database/init.ts"
  },
  "keywords": [
    "api",
    "education",
    "typescript",
    "postgresql"
  ],
  "author": "Dirasiq Team",
  "license": "MIT",
  "dependencies": {
    "@prisma/client": "6.15.0",
    "@types/node-cron": "3.0.11",
    "bcryptjs": "^2.4.3",
    "compression": "^1.7.4",
    "cors": "^2.8.5",
    "dotenv": "^16.3.1",
    "express": "^4.18.2",
    "express-rate-limit": "^7.1.5",
    "express-validator": "^7.0.1",
    "google-auth-library": "10.3.0",
    "helmet": "^7.1.0",
    "joi": "^17.11.0",
    "jsonwebtoken": "^9.0.2",
    "module-alias": "2.2.3",
    "morgan": "^1.10.0",
    "node-cron": "4.2.1",
    "node-geocoder": "^4.1.0",
    "nodemailer": "^6.9.7",
    "onesignal-node": "3.4.0",
    "pg": "^8.11.3",
    "qrcode": "^1.5.3",
    "supertest": "^6.3.3"
  },
  "devDependencies": {
    "@types/bcryptjs": "2.4.6",
    "@types/compression": "1.8.1",
    "@types/cors": "2.8.19",
    "@types/express": "4.17.23",
    "@types/jest": "^29.5.8",
    "@types/jsonwebtoken": "9.0.10",
    "@types/morgan": "1.9.10",
    "@types/node": "20.19.22",
    "@types/node-geocoder": "4.2.6",
    "@types/nodemailer": "6.4.20",
    "@types/pg": "8.15.5",
    "@types/qrcode": "1.5.5",
    "@types/supertest": "^2.0.16",
    "@typescript-eslint/eslint-plugin": "^6.12.0",
    "@typescript-eslint/parser": "^6.12.0",
    "copyfiles": "2.4.1",
    "eslint": "^8.54.0",
    "jest": "^29.7.0",
    "nodemon": "^3.0.2",
    "prettier": "^3.1.0",
    "prisma": "6.15.0",
    "ts-jest": "^29.1.1",
    "ts-node": "^10.9.1",
    "tsconfig-paths": "^4.2.0",
    "typescript": "^5.3.2"
  }
}
